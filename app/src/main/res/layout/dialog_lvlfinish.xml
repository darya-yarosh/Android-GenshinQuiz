<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_preview"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pic_background_preview"
    android:layout_gravity="center"

    android:layout_marginTop="150dp"
    android:layout_marginBottom="150dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/buttonClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="X"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/button_gamelevels"
            android:layout_gravity="end"
        />
        <ImageView
            android:id="@+id/previewImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/stickerwin"
            android:layout_weight="60"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/textDescriptionFinish"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/descriptionFinish"
            android:layout_weight="30"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/button_gamelevels"
            android:layout_weight="10"
            android:text="@string/txtcontinue"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
</LinearLayout>